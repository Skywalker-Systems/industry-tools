{
  "toolSpec": {
    "name": "Get_Wallet_Tool",
    "description": "Retrieves wallet data and creates a signer instance for a specific chain",
    "inputSchema": {
      "json": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "description": "The user ID that owns the wallet",
            "pattern": "^user_[a-zA-Z0-9]{27}$"
          },
          "characterId": {
            "type": "string",
            "description": "The character ID associated with the wallet"
          },
          "chainId": {
            "type": "number",
            "description": "The chain ID for RPC connection",
            "enum": [1, 137, 8453, 534352],
            "examples": [8453, 137]
          }
        },
        "required": ["userId", "characterId", "chainId"]
      }
    },
    "outputSchema": {
      "json": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "wallet_data": {
                "type": "object",
                "properties": {
                  "address": {
                    "type": "string",
                    "description": "The Ethereum address of the wallet"
                  }
                }
              },
              "message": {
                "type": "string",
                "const": "Wallet data retrieved successfully"
              }
            },
            "required": ["wallet_data", "message"]
          },
          {
            "properties": {
              "error": {
                "type": "string",
                "enum": ["WalletNotFound", "RPCNotFound", "WalletError"],
                "description": "Type of error encountered"
              },
              "message": {
                "type": "string",
                "description": "Detailed error message"
              }
            },
            "required": ["error", "message"]
          }
        ]
      }
    }
  }
}
