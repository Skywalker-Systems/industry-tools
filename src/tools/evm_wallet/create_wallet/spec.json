{
  "toolSpec": {
    "name": "Create_Wallet_Tool",
    "description": "Creates a new Ethereum wallet for a character or retrieves an existing one",
    "inputSchema": {
      "json": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "description": "The user ID that owns the wallet",
            "pattern": "^user_[a-zA-Z0-9]{27}$"
          },
          "characterId": {
            "type": "string",
            "description": "The character ID that the wallet will be associated with"
          }
        },
        "required": ["userId", "characterId"]
      }
    },
    "outputSchema": {
      "json": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "wallet_data": {
                "type": "object",
                "properties": {
                  "address": {
                    "type": "string",
                    "description": "The Ethereum address of the wallet"
                  }
                }
              },
              "message": {
                "type": "string",
                "enum": [
                  "Wallet created successfully",
                  "Existing wallet retrieved successfully"
                ]
              }
            },
            "required": ["wallet_data", "message"]
          },
          {
            "properties": {
              "error": {
                "type": "string",
                "description": "Error type if wallet creation fails"
              },
              "message": {
                "type": "string",
                "description": "Detailed error message"
              }
            },
            "required": ["error", "message"]
          }
        ]
      }
    }
  }
}
