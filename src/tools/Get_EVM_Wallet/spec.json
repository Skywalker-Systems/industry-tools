{
  "toolSpec": {
    "name": "Get_EVM_Wallet",
    "description": "Retrieves an existing wallet for a specific character and chain",
    "inputSchema": {
      "json": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "description": "The user ID that owns the wallet",
            "pattern": "^user_[a-zA-Z0-9]{27}$"
          },
          "characterId": {
            "type": "string",
            "description": "The character ID associated with the wallet"
          },
          "network": {
            "type": "string",
            "description": "The network name for RPC connection",
            "enum": ["base", "polygon", "scroll"],
            "examples": ["base", "polygon", "scroll"]
          }
        },
        "required": ["userId", "characterId", "network"]
      }
    },
    "outputSchema": {
      "json": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "wallet": {
                "type": "object",
                "properties": {
                  "address": {
                    "type": "string",
                    "description": "The Ethereum address of the wallet"
                  }
                }
              },
              "message": {
                "type": "string",
                "const": "Wallet data retrieved successfully"
              }
            },
            "required": ["wallet", "message"]
          },
          {
            "properties": {
              "error": {
                "type": "string",
                "enum": ["WalletNotFound", "RPCNotFound", "WalletError"],
                "description": "Type of error encountered"
              },
              "message": {
                "type": "string",
                "description": "Detailed error message"
              }
            },
            "required": ["error", "message"]
          }
        ]
      }
    }
  }
}
