{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@storage/*": ["src/storage/*"],
      "@tools/*": ["src/tools/*"],
      "@utils/*": ["src/utils/*"],
      "@spec/*": ["src/spec/*"],
      "@utils/contracts": ["src/utils/contracts/*"]
    },
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
